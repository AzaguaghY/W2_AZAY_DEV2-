<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <style>
        body {
            background-color: #f8f9fa; /* Couleur de fond douce */
        }
        h1 {
            color: #343a40; /* Couleur du titre */
        }
        .table {
            background-color: #ffffff; /* Fond blanc pour la table */
            border-radius: 8px; /* Coins arrondis */
            overflow: hidden; /* Bordures uniformes */
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1); /* Légère ombre */
        }
        .badge {
            font-size: 14px; /* Taille des badges */
        }
        .btn-back {
            background-color: #007bff;
            color: white;
            border: none;
        }
        .btn-back:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <div class="text-center mb-4">
        <img src="https://clg.qc.ca/wp-content/themes/clg.qc.ca/dist/images/logo.svg" alt="Collège Lionel Groulx" style="width: 150px; height: auto;">
    </div>
    <div class="container mt-5">
        <h1 class="text-center mb-4"><i class="fas fa-users"></i> Liste des Usagers</h1>
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col"><i class="fas fa-user-circle"></i> Login</th>
                    <th scope="col"><i class="fas fa-user"></i> Nom</th>
                    <th scope="col"><i class="fas fa-tasks"></i> Rôles</th>
                </tr>
            </thead>
            <tbody>
                <% usagers.forEach(function(usager) { %>
                    <tr>
                        <td><%= usager.login %></td>
                        <td><%= usager.nom %></td>
                        <td>
                            <% usager.roles.forEach(function(role) { %>
                                <span class="badge badge-primary"><%= role %></span>
                            <% }); %>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
        <div class="text-center mt-4">
            <a href="/" class="btn btn-primary btn-lg">
                <i class="fas fa-arrow-left"></i> Retour à la page d'accueil
            </a>
        </div>
        
    </div>
</body>
</html>







